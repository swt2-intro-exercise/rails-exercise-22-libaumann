<h1>Papers</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Venue</th>
    <th>Year</th>
    <th></th>
  </tr>
 
  <% @papers.each do |paper| %>
    <tr>
      <td><%= paper.title %></td>
      <td><%= paper.venue %></td>
      <td><%= paper.year %></td>
      <p>
      <td><%= link_to "Show this paper", paper %></td>
      <td><%= link_to "Edit this paper", edit_paper_path(paper) %></td>
      <td><%= link_to 'Delete this paper', paper_path(paper), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
      </p>
    </tr>
  <% end %>
</table>

<%= link_to "New paper", new_paper_path %>
